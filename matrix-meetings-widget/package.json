    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.1",
    "@types/react-i18next": "^8.1.0",
    "@vitejs/plugin-basic-ssl": "^2.0.0",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "@vitest/coverage-v8": "^3.0.9",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.23.0",
    "happy-dom": "^17.4.4",
    "i18next-parser": "^9.3.0",
    "msw": "^2.7.3",
    "vite": "^6.2.3",
    "vitest": "^3.0.9",
    "vitest-axe": "v1.0.0-pre.5"
  },
  "engines": {
    "node": ">=20",
    "yarn": ">=1.22.1 <2.0.0"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "dev:https": "VITE_DEV_SSL=true vite",
    "docker": "yarn run docker:build && yarn run docker:run && yarn run docker:remove",
    "docker:build": "docker build --build-context root=../ -t nordeck/matrix-meetings-widget .",
    "docker:run": "dotenv -c development -- docker run -e REACT_APP_API_BASE_URL -p 3000:8080 --name matrix-meetings-widget nordeck/matrix-meetings-widget",
    "docker:stop": "docker stop matrix-meetings-widget",
    "docker:remove": "yarn run docker:stop && docker rm -v matrix-meetings-widget",
    "docker:inspect": "docker inspect nordeck/matrix-meetings-widget",
    "depcheck": "depcheck --ignores=@vitest/coverage-v8",
    "test": "vitest",
    "test:all": "vitest #legacy command",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --max-warnings=0",
    "translate": "i18next 'src/**/*.{ts,tsx}'",
    "tsc": "tsc",
    "preview": "vite preview",
    "preview:https": "VITE_DEV_SSL=true vite preview",
    "generate-disclaimer": "cp ../LICENSE ./dist/LICENSE.txt && cp NOTICE ./dist/NOTICE.txt && yarn licenses generate-disclaimer --prod >> ./dist/NOTICE.txt && yarn licenses list --prod --json --no-progress > ./dist/licenses.json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nordeck/matrix-meetings.git"
  },
  "bugs": {
    "url": "https://github.com/nordeck/matrix-meetings/issues"
  }
}
